{
    "name": "aivo-test",
    "description": "Endpoint that returns an array with the last 10 tweets of a twitter account",
    "version": "1.0.0",
    "author": [
        {
            "name": "Cristian Tomas Torres",
            "email": "cristiantomastorres@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "propel/propel": "~2.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S localhost:1234 -t public",
        "test": "phpunit"
    },
    "autoload": {
        "classmap": ["src/models"]
    }
}
